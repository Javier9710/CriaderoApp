<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/Proveedor"
        android:layout_width="404dp"
        android:layout_height="43dp"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="20dp">


        <TextView

            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="0dp"
            android:text="ID  |"></TextView>

        <TextView
            android:id="@+id/codigo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="50dp"
            android:text="CODIGO   |"></TextView>

        <TextView
            android:id="@+id/nombre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="50dp"
            android:text="NOMBRE   |"></TextView>

        <TextView
            android:id="@+id/direccion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="10dp"
            android:text="DIRECCION    |"></TextView>

        <TextView
            android:id="@+id/responsable2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="290dp"
            android:layout_marginRight="0dp"
            android:text="  RESPONSABLE"></TextView>


    </FrameLayout>
